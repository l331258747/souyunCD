<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:id="@+id/view_dz"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/bg_gradients_base"
        android:layout_margin="@dimen/sp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大宗派车订单"
        app:layout_constraintStart_toStartOf="@+id/view_dz"
        app:layout_constraintTop_toTopOf="@+id/view_dz"
        android:layout_margin="@dimen/sp_20"
        android:textColor="@color/white"/>


    <View
        android:id="@+id/view_ld"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/bg_gradients_base"
        android:layout_margin="@dimen/sp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_dz"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同城零担订单"
        app:layout_constraintStart_toStartOf="@+id/view_ld"
        app:layout_constraintTop_toTopOf="@+id/view_ld"
        android:layout_margin="@dimen/sp_20"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>